{{#partial "principal" }}

      <div class="bg-gris py-2 align-items-center text-white">
          <ol class="breadcrumb justify-content-center">
            <li class="breadcrumb-item text-white "><a href="/home" id="subrayado" class="nav-link text-white">Home</a></li>
            <li class="text-white text-decoration-none mx-2"> > </li>
            <li class="breadcrumb-item text-white "><a href="/entidades" id="subrayado" class="nav-link text-white">Entidades</a></li>
            <li class="text-white text-decoration-none mx-2"> > </li>
            <li class="breadcrumb-item text-white" aria-current="page">Establecimientos</li>
          </ol>
        </nav>
        </div>


<h2 class="text-center my-4">Establecimientos</h2>


<div class="container d-flex justify-content-center">
<div class="row">
{{#establecimientos}}
<div class="col mx-4">
<div class="card h-100 d-inline-block border border-secondary justify-content-center text-center" style="width: 18rem;">
  <div class="card-body h-100 d-inline-block d-flex flex-column">
    <h5 class="card-title fw-bolder">{{nombre}}</h5>
    <h6>Servicios:</h6>
    {{#servicios}}
        <p>{{nombre}}</p>
    {{/servicios}}
    <div class="container mt-auto align-self-end justify-content-center">
    <button class="btn btn-warning" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom" aria-controls="offcanvasBottom">Cargar incidente</button>

    <div class="offcanvas offcanvas-bottom bg-marron" tabindex="-1" id="offcanvasBottom" aria-labelledby="offcanvasBottomLabel">
      <div class="offcanvas-header py-0 mt-2" data-bs-theme="dark">
        <h5 class="offcanvas-title text-white" id="offcanvasBottomLabel">Cargar incidente</h5>
        <button type="button" class="btn-close end-0" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body small py-0">
        <form method="POST" action="/establecimientos/{{id}}">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label class="text-white" for="disabledTextInput">Establecimiento</label>
                            <input type="text" id="disabledTextInput" class="form-control" placeholder="{{nombre}}" disabled>
                        </div>
                        <div>
                            <label class="text-white" for="opciones">Servicio</label>
                            <select id="servicio" class="form-select " name="servicio">
                                 {{#servicios}}
                                 <option value={{id}}>{{nombre}}</option>
                                 {{/servicios}}
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="container mb-3">
                            <label class="text-white">Observaci√≥n</label>
                            <textarea class="form-control " name="observacion" maxlength="250"></textarea>
                        </div>
                        <div class="container mb-3 d-grid gap-2 d-md-flex justify-content-md-end">
                            <input type="hidden" class="form-control" name="idEntidad" value="{{idEntidad}}">
                            <input type="submit" class="btn btn-warning text-white" value="Abrir Incidente">
                        </div>
                    </div>
                </div>
            </form>
      </div>
    </div>
    </div>
  </div>
</div>
</div>
{{/establecimientos}}
</div>
</div>



