<div class="row justify-content-center my-5">
    <div class="col-4 border rounded-5 p-3 bg-white shadow box-area  align-self-center">
    <h2 class="text-center my-3">Modificar mi usuario</h2>
    <form method="POST" action="/profile/modificacion" type="submit" value="Modificar Usuario">
    <!-- Campo oculto para tratar la request como PUT -->
    <input type="hidden" class="form-control" name="_method" value="PUT">
         <ul class="list-group">
           <div class="input-group mb-3">
             <span class="input-group-text" id="inputGroup-sizing-default">Usuario</span>
             <input type="text" id="disabledTextInput" class="form-control" name="usuario" value="{{usuario}}">
           </div>
           <div class="input-group mb-3">
             <span class="input-group-text" id="inputGroup-sizing-default">Contacto</span>
             <input type="text" id="disabledTextInput" class="form-control" name="contacto" value="{{contacto}}">
           </div>
           <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Contrase√±a</span>
              <input type="password" id="disabledTextInput" class="form-control" name="contrasenia" value="{{contrasenia}}">
           </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Agregar horario de notificacion</span>
              <input type="time" id="disabledTextInput" class="form-control" value="horario" name="horario" >
           </div>
           <div class="input-group mb-3">
               <span class="input-group-text" id="inputGroup-sizing-default">Medio notificador</span>
               <input type="text" id="disabledTextInput" class="form-control" value="{{medioNotificador.nombre}}" name="medioNoti" disabled>
            </div>
            <div class="mb-3 d-grid gap-2 d-md-flex justify-content-md-end">
            <input type="submit" class="btn btn-warning" value="Guardar">
            </div>
         </ul>
         </form>
      <div>
</div>
