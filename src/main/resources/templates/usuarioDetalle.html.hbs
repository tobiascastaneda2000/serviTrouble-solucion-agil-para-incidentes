{{#partial "principal" }}

<div class="bg-gris py-2 align-items-center text-white">
  <ol class="breadcrumb justify-content-center">
    <li class="breadcrumb-item text-white "><a href="/admin/home" id="subrayado" class="nav-link text-white">Admin</a></li>
    <li class="text-white text-decoration-none mx-2"> > </li>
    <li class="breadcrumb-item text-white" aria-current="page">Usuario</li>
  </ol>
</nav>
</div>



<div class="container d-flex justify-content-center align-items-center my-4">
    <div class="row">
        <h2 class="text-center">Usuario</h2>

        <ul class="list-group list-group-flush">
                {{#usuarioDetalle}}
                  <li class="list-group-item"><a><span style="font-weight: bold">Usuario:</span> {{usuario}}</a></li>
                  <li class="list-group-item"><a><span style="font-weight: bold">Contacto:</span> {{contacto}}</a></li>
                  <li class="list-group-item"><a><span style="font-weight: bold">Medio Notificador:</span> {{medioNoti}}</a></li>
                  <li class="list-group-item"><a><span style="font-weight: bold;">Entidades de Interés:</span>
                                                 {{#entidadesInteres}}
                                                     <li>{{razonSocial}}</li>
                                                 {{/entidadesInteres}}
                                                </a></li>
                  <li class="list-group-item"><a><span style="font-weight: bold">Horarios de Notificación:</span>
                                                  {{#horarios}}
                                                     {{hora}}:{{minuto}}
                                                   {{/horarios}}
                                               </a></li>
                {{/usuarioDetalle}}
        </ul>

        <form method="POST" class="d-grid gap-2 d-md-flex justify-content-md-end">
            <input  onclick="return confirm('¿Seguro que querés eliminar el usuario?')" type="submit" class="btn btn-warning" value="Eliminar Usuario">
        </form>
    </div>
</div>

{{/partial}}

