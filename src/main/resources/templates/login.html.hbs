{{#partial "principal" }}
    <div class="container mt-5 responsive-login">
        <div class="row justify-content-center">
                <div class="col-4 align-self-center border border-secondary-subtle border-3 ">
                    <div class="cont-form">
                        <form method="POST" class="row p-2">
                        <h2 class="text-center my-3 fw-bold">Iniciar sesión</h2>
                        <div class="my-3">
                            <label>Nombre</label>
                            <input type="text" class="form-control border border-secondary" name="nombre" placeholder="name@example.com">
                        </div>
                        <div class="my-3">
                            <label>Contraseña</label>
                            <input type="password" class="form-control border border-secondary" name="contrasenia" placeholder="password">
                        </div>
                        <div class="my-3 d-grid gap-2 ">
                            <input type="submit" class="btn btn-warning " value="Iniciar">
                        </div>

                        </form>
                    </div>
                </div>
        </div>
    </div>



{{/partial}}

