        <li class="nav-item mx-4">
          <a class="nav-link text-white" href="/admin-comunidades">Administrador de comunidad</a>
        </li>
      </ul>
</div>


      <div>
        <h2 class="text-center mt-5 mb-4">INCIDENTES CERCANOS</h2>
      </div>

    <div class="container  my-2">
        <div class="text-center">
        {{#mensajeIncidentes}}
        <div class="container-md">
            <p class="alert alert-warning">{{mensajeIncidentes}}</p>
        </div>
        {{/mensajeIncidentes}}

            <div class="row">
                {{#incidentes}}
                <div class="col">
                  <div class="card" style="width: 16rem;">
                      <div class="card-body">
                        <h5 class="card-title">{{servicioAsociado.nombre}}</h5>
                        <p class="card-text">{{observacion}}</p>
                        <form class="incidente_sugeridos-form" method="POST" action="/incidente/{{id}}">
                            <input type="hidden" value="{{id}}" name="idIncidente"></input>
                            <input type="submit" onclick="return confirm('¿Seguro que querés cerrar el incidente?')" value="Cerrar Incidente" class="btn btn-amarillo"/>
                        </form>
                      </div>
                    </div>
                </div>
                {{/incidentes}}
            </div>
        </div>
        <a href="/incidente-sugerido"><p class="text-end mt-3">Ver más</p></a>
      </div>

      <div>
        <h2 class="text-center mt-5 mb-4">RANKINGS</h2>
      </div>


<div class="container">
    <div class="row">
    <div class="col">
        <ul class="list-group text-center">
          <li class="list-group-item text-uppercase fw-bold">RANKING DE ENTIDADES POR {{criterio1.nombre_criterio}} </li>
          {{#ranking1}}
             <li class="list-group-item">{{razonSocial}}</li>
          {{/ranking1}}
        </ul>
    </div>
    <div class="col">
        <ul class="list-group text-center">
          <li class="list-group-item text-uppercase fw-bold">RANKING DE ENTIDADES POR {{criterio2.nombre_criterio}}</li>
          {{#ranking2}}
             <li class="list-group-item">{{razonSocial}}</li>
          {{/ranking2}}
        </ul>
     </div>
     </div>
</div>


